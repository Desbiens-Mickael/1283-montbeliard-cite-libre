{% extends 'layout/main-center.html.twig' %}

{% block title %}Register{% endblock %}

{% block main %}
<div class="row">
		<div class="col-lg-6 offset-lg-3">
            <h1>Rejoignez la partie</h1>
            {{ form_start(registrationForm) }}
                <div class="mt-3">
                    {{ form_row(registrationForm.username, {
                        label: 'Pseudo (nom+prénom)'
                    }) }}
                </div>
                <div class="mt-3">
                    {{ form_row(registrationForm.email, {
                        label: 'Adresse email'
                    }) }}
                </div>
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Mot de passe'
                }) }}
                {{ form_row(registrationForm.classe) }}
                {{ form_row(registrationForm.agreeTerms) }}
                <div class="d-flex justify-content-between mt-4">
                    <a href="/login">Déjà un compte?</a>
                </div>
                <div class="d-flex justify-content-center">
                    <button class="btn btn-one my-4 w-100" type="submit">S'inscrire</button>
                </div>
            {{ form_end(registrationForm) }}
        </div>
</div>
{% endblock %}
