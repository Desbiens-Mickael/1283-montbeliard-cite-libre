{% extends 'admin/base.html.twig' %}

{% block title %}Question{% endblock %}

{% block body %}
    <h1>Question</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ question.id }}</td>
            </tr>
            <tr>
                <th>Question</th>
                <td>{{ question.question }}</td>
            </tr>
            <tr>
                <th>Level</th>
                <td>{{ question.level }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-primary" href="{{ path('admin_question_index') }}"><i class="bi bi-backspace"></i> retour à la liste</a>

    <a class="btn btn-outline-primary" href="{{ path('admin_question_edit', {'id': question.id}) }}"><i class="bi bi-pencil"></i> éditer</a>

    {{ include('admin/question/_delete_form.html.twig') }}
{% endblock %}
